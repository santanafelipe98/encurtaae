    <body>
        <%- include('./includes/header') %>
        <main class="container container-centered">

            <div id="counter">
                <h2 id="message" class="c-white txt-lg">Aguarde...</h2>
                <div id="remaining_time" class="txt-xl txt-strong txt-center mt-1 c-white"></div>
            </div>

            <div id="original_url" class="mt-2 c-white"></div>

            <% let base64 = btoa(encodeURIComponent(data.originalURL)); %>

            <button
                type="button"
                disabled
                id="btn_access_url"
                class="btn btn-primary btn-wd-lg mt-3 hidden"
                value="<%= base64 %>">
                Acessar
            </button>
