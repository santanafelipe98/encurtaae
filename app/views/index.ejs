    <body>
        <%- include('./includes/header') %>
        <main class="container container-centered">
            <img class="img-page-banner" src="images/people_holding_web.png" alt="Pessoas segurando a web">

            <small><a href='https://www.freepik.com/vectors/background'>Background vector created by rawpixel.com - www.freepik.com</a></small>

            <h1 class="c-white">Encurte URLs de forma descomplicada</h1>

            <div class="shortener-form mt-5">
                <div class="input-group">
                    <input type="text" class="input-control" placeholder="Digite ou cole a URL aqui" id="original_url">
                    
                    <div class="custom-select ml-1">
                        <select name="expiration_time" id="expiration_time">
                            <option value="-1">expira em</option>
                            <% for (option of options) {  %>
                                <option value="<%= option.value %>"><%= option.label %></option>
                            <% } %>
                        </select>
                    </div>
                </div>

                <div class="g-recaptcha mt-1" data-sitekey="6LfPtAYdAAAAAK_RZPkAHGcgdEDUYD_aHTFWgyJn"></div>

                <div id="feedback_message" class="alert hidden mt-1"></div> <!-- Mensagem de feedback -->

                <div id="short_url" class="url-container hidden mt-1"></div> <!-- Container da URL -->

                <button type="button" id="btn_shorten" class="btn btn-primary mt-1">
                    <i class="fas fa-link mr-1"></i>
                    Encurtar
                </button>

                <div id="loading_spinner" class="mt-1 hidden">
                    <img src="images/loading_spinner.gif" alt="Carregando">
                </div>
            </div>
        </main>
        <%- include('includes/footer') %>
        <script src="js/drawer.js"></script>
        <script src="js/custom_select.js"></script>
        <script src="js/api.js"></script>
        <script src="js/index.js"></script>
